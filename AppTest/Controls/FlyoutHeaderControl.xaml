<?xml version="1.0" encoding="utf-8" ?>
<StackLayout Padding="20"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTest.Controls.FlyoutHeaderControl">
    <StackLayout Orientation="Horizontal" Spacing="10">
        <Label x:Name="lblUserName" FontSize="20" FontAttributes="Bold"/>
        <Label VerticalTextAlignment="Center" FontAttributes="Bold" x:Name="lblUserRole" FontSize="12"/>
    </StackLayout>
    <Label  x:Name="lblUserEmail" FontSize="18"/>
</StackLayout>
